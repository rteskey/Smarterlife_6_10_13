<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/cremindermonthyearLayout"
             android:layout_width="match_parent"
             android:layout_height="800dp">

    <LinearLayout
            android:id="@+id/creminderscrollView1"
            android:layout_width="match_parent"
            android:layout_height="800dp">

        <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

            <LinearLayout
                    android:id="@+id/cremindermonthcalendarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    android:padding="2dp">

                <RelativeLayout
                        android:id="@+id/cremindermonthyearspinnerLayout"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/creminderbtn_previous"

                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"

                            android:tag="creminderbtn_previous"
                            android:text="&lt;&lt;"/>

                    <LinearLayout
                            android:id="@+id/remindermonthyearlyt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_toRightOf="@+id/creminderbtn_before"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/txtcremindermonth"

                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text=""/>

                        <TextView
                                android:id="@+id/txtcreminderyear"

                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:gravity="center_horizontal"
                                android:text=""/>
                    </LinearLayout>

                    <Button
                            android:id="@+id/creminderbtn_next"

                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_alignBaseline="@+id/creminderbtn_before"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="right"

                            android:tag=""
                            android:text=">>"/>
                </RelativeLayout>
            </LinearLayout>

            <ScrollView
                    android:id="@+id/customselecteditemsv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical">

                <LinearLayout
                        android:id="@+id/customreminderitemsll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="23dp"
                        android:orientation="vertical">


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>