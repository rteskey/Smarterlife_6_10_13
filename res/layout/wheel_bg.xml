<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent">

    <item>

        <shape android:shape="rectangle">

            <gradient
                    android:startColor="#ffccdd"
                    android:centerColor="#DDD"
                    android:endColor="#ffccdd"
                    android:angle="90"/>

            <stroke
                    android:width="1dp"
                    android:color="#FF333333"/>
        </shape>
    </item>

    <item
            android:left="4dp"
            android:right="4dp"
            android:top="1dp"
            android:bottom="1dp">

        <shape android:shape="rectangle">

            <gradient
                    android:startColor="#ff195897"
                    android:centerColor="#FFF"
                    android:endColor="#ff195897"
                    android:angle="90"/>
        </shape>
    </item>
</layer-list>