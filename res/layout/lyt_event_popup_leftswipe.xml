<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lyt_event_leftswipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#30ffffff"
            android:padding="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_event_leftswipe_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="TextView"
                    style="@style/calendarmonth_leftswipe"
                    android:background="#FF1d4578"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">


            <Button
                    android:id="@+id/btn_mapit"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:tag="0"
                    android:text="Map it"/>


            <Button
                    android:id="@+id/btn_notify"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"

                    android:tag="1"
                    android:text="Notify"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_edit"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"

                    android:tag="4"
                    android:text="edit"/>

            <Button
                    android:id="@+id/btn_reschedule"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"

                    android:tag="6"
                    android:text="Reschedule"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_addevent"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"

                    android:tag="8"
                    android:text="Event +"/>

            <Button
                    android:id="@+id/btn_addtask"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"

                    android:tag="10"
                    android:text="Task +"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_close"
                    style="@style/calendarmonth_leftswipe"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".25"

                    android:tag="10"
                    android:text="close"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>